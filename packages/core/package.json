{
  "name": "@prism/core",
  "version": "0.0.0",
  "description": "Core utilities and types for Prism design system",
  "sideEffects": false,
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "clean": "rimraf .turbo node_modules dist"
  },
  "devDependencies": {
    "@prism/eslint-config": "workspace:*",
    "@prism/typescript-config": "workspace:*",
    "eslint": "^8.57.0",
    "tsup": "^8.0.2",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "@prism/tokens": "workspace:*",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.4.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
